<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_vista_paciente"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imagen_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_mis_pacientes"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Imagen en la esquina superior derecha" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">



                <ImageView
                    android:id="@+id/imagen_paciente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="40dp"
                    android:src="@drawable/paciente_perfil"
                    android:layout_gravity="center"/>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="8dp"
                    android:backgroundTint="@color/white"
                    app:contentPadding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/paciente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cristina Aguilera"
                            android:layout_marginBottom="15dp"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/titulo_descripcion_modulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descripción del Tratamiento"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/texto_descripcion_modulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Procedimiento integral de fisioterapia diseñado para recuperar la función, sanar lesiones y prevenir futuras complicaciones. Restaurar la movilidad, fuerza y función de la muñeca con técnicas de movimiento correcto y hábitos saludables."
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="8dp"
                    android:backgroundTint="@color/white"
                    app:contentPadding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp">

                        <TextView
                            android:id="@+id/titulo_nombre_paciente2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Imformación del Paciente"
                            android:textStyle="bold|italic"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/text_nombre_paciente"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:background="@drawable/borde_text_editar_perfil"
                            android:hint="Nombre "
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/text_numero_identificacion"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:background="@drawable/borde_text_editar_perfil"
                            android:hint="Numero de Identificacion"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/text_ubicacion_paciente"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:background="@drawable/borde_text_editar_perfil"
                            android:hint="Ubicación"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/text_telefono_paciente"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:background="@drawable/borde_text_editar_perfil"
                            android:hint="Numero de Contacto"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp" />


                        <EditText
                            android:id="@+id/text_correo_paciente"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:background="@drawable/borde_text_editar_perfil"
                            android:hint="Email"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/text_edad"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:background="@drawable/borde_text_editar_perfil"
                            android:hint="Edad"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="20dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/fondo_barranavegacion"
        android:gravity="center"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:background="@android:color/transparent"
            android:contentDescription="@string/ic_home" />

        <ImageButton
            android:id="@+id/nav_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendario"
            android:background="@android:color/transparent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />

        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_perfil"
            android:background="@android:color/transparent"
            android:contentDescription="@string/ic_perfil"/>

    </LinearLayout>

</LinearLayout>